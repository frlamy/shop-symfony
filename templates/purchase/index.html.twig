{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes :</h1>
	<table class="table table-hover table-striped">
		<thead>
			<tr>
				<th>N°commande</th>
				<th>Adresse de livraison</th>
				<th>Date de commande</th>
				<th>Produits</th>
				<th>Total de la commande</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{ p.id }}</td>
					<td>{{ p.address}}<br>{{ p.postalcode}},
						{{p.city}}</td>
					<td>{{ p.purchasedAt | date('d.m.Y, H:i')}}</td>
					<td>
						<ul class="">
							{% for item in p.purchaseItems %}
								<li class="">{{item.quantity}}x
									{{ item.productName }}
									({{item.total / 100}}
									€)</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{p.total / 100}}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
