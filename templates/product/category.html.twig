{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{ slug }}
{% endblock %}

{% block body %}
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path("homepage") }}">Accueil</a></li>
        <li class="breadcrumb-item active">{{category.name}}</li>
    </ol>
	<h1>Catégorie :
		{{ category.name }}</h1>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ p.mainPicture }}" class="img-fluid" alt="Image du produit">
					<div class="card-body">
						<h3 class="card-title">{{ p.name }}({{ p.price / 100 }}
							&euro;)</h3>
						<span class="badge bg-info">{{p.category.name}}</span>
						<p class="card-text">{{ p.shortDescription }}</p>
						<a href="{{ path("product_show", { 'slug': p.slug, 'category_slug': p.category.slug })}}" class="btn btn-sm btn-primary">Détails</a>
						<a href="" class="btn btn-sm btn-success">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
