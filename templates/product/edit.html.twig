{% extends "base.html.twig" %}

{% block title %}
	Modification du produit n°{{ product.id }}
{% endblock %}

{% form_theme formView 'shared/_formErrors.html.twig' %}

{% block body %}

	<h1>Editer :
		{{ product.name }}</h1>
	{{ form_start(formView, {'attr': {'novalidate': 'novalidate'}})}}
	{{ form_errors(formView)}}
	<div class="row">
		<div class="col">
			{{ form_row(formView.name)}}
			{{ form_row(formView.price)}}
		</div>
		<div class="col">
			{{ form_row(formView.mainPicture)}}
			{{ form_row(formView.category)}}
			{{ form_row(formView.shortDescription)}}
		</div>
	</div>
	<button class="btn btn-dark" type="submit">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>

	{{ form_end(formView)}}
{% endblock %}
